<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<ul>
  <% @links.each do |link| %>
    <li><a href="<%=link.url%>"><%= link.title %></a></li>
    <form method="post">
      <input type="hidden" name='url' value="<%=link.url%>">
      <button type="submit" name="button" formaction="/link/delete">Delete</button>
    </form>
  <% end %>
</ul>

<h5>Add New Link</h5>
<form action="/link/new" method="post">
  <label for="url">
    URL:
    <input type="text" name="url">
  </label>
  <label for="text">
    Title:
    <input type="text" name="title">
  </label>
  <input type="submit" value="Add Link">
</form>
