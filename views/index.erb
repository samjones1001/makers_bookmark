<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<ul>
  <% @links.each do |link| %>
    <li><a href="<%=link.url%>"><%= link.title %></a></li>
    <ul>
      <% link.get_comments.each do |comment| %>
        <li><%= comment.text %></li>
      <% end %>
    </ul>
    <form action="/link/<%= link.id %>/comment/new" method="get">
      <input type="hidden" name="id" value="<%=link.id%>">
      <button type="submit">Add Comment</button>
    </form>
    <form action="/link/<%= link.id %>/update" method="get">
      <input type="hidden" name="id" value="<%=link.id%>">
      <button type="submit">Update</button>
    </form>
    <form  action='/link/<%= link.id %>/delete' method="post">
      <input type="hidden" name='id' value="<%=link.id%>">
      <button type="submit">Delete</button>
    </form>
  <% end %>
</ul>

<h5>Add New Link</h5>
<form action="/link/new" method="post">
  <label for="url">
    URL:
    <input type="text" name="url">
  </label>
  <label for="text">
    Title:
    <input type="text" name="title">
  </label>
  <input type="submit" value="Add Link">
</form>
